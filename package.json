{
  "name": "wodge",
  "description": "A collaborative workspace.",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "studio": "turbo db:studio",
    "generate": "turbo db:generate",
    "migrate": "turbo db:migration",
    "migrate:local": "turbo db:migration:local",
    "drop": "turbo db:drop",
    "lint": "turbo lint",
    "add:comp": "turbo add:comp",
    "reset:app": "rm -r ./apps/web/.wrangler && rm -r ./apps/web/.next && rm -r ./apps/backend/.partykit",
    "init:app": "pnpm generate && pnpm migrate:local && mkdir -p ./apps/backend/.partykit"
  },
  "devDependencies": {
    "@repo/ts": "workspace:*",
    "eslint": "latest",
    "eslint-config-turbo": "^1.12.4",
    "tsx": "^4.7.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "wrangler": "^3.28.3"
  },
  "packageManager": "pnpm@8.9.0",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=18"
  }
}
